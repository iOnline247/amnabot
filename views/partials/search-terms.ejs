<div role="tabpanel" class="tab-pane active" id="search-terms">
    <div class="info">
        <p>Retweet top tweets based on the search term and frequency.</p>
    </div>
    <div class="controls">
        <div class="pull-left">
            <div class="onoffswitch js-vizi-hidden">
                <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox active-toggle" id="search-terms-toggle" checked>
                <label class="onoffswitch-label" for="search-terms-toggle">
                    <span class="onoffswitch-inner"></span>
                    <span class="onoffswitch-switch"></span>
                </label>
            </div>
        </div>
        <div class="search-types pull-right">
            <p>Search Types</p>
            <div class="checkbox">
                <input class="regular-checkbox" id="search-type-popular" type="checkbox" name="popular" value="popular">
                <label for="search-type-popular">Popular</label>
            </div>
            <div class="checkbox">
                <input class="regular-checkbox" id="search-type-mixed" type="checkbox" name="mixed" value="mixed">
                <label for="search-type-mixed">Mixed</label>
            </div>
            <div class="checkbox">
                <input class="regular-checkbox" id="search-type-recent" type="checkbox" name="recent" value="recent">
                <label for="search-type-recent">Recent</label>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered hashtags">
            <thead>
                <th></th>
                <th>Hashtag</th>
                <th>Frequency</th>
            </thead>
            <tbody>
                <tr>
                    <td></td>
                    <td colspan="2" class='js-no-data'>There aren't any hashtags.  Betta get on that...</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="controls">
        <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#hashtag-modal" data-form-title='Add Search Term' data-name="#">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            Add search term
        </button>
    </div>
</div>